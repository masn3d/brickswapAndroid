<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/detailsImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:src="@mipmap/legomixed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailsName"
        android:layout_alignTop="@+id/detailsImage"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailsAuther"
        android:layout_below="@+id/detailsName"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage"
        android:layout_marginTop="3dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailsCity"
        android:layout_below="@+id/detailsAuther"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage"
        android:layout_marginTop="3dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailsDistance"
        android:layout_below="@+id/detailsCity"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage"
        android:layout_marginTop="3dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailsCreated"
        android:layout_below="@+id/detailsDistance"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage"
        android:textSize="12dp"
        android:layout_marginTop="3dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailsDescription"
        android:layout_below="@+id/detailsImage"
        android:layout_alignLeft="@+id/detailsImage"
        android:layout_alignStart="@+id/detailsImage"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:editable="false"
        android:gravity="top" />
</RelativeLayout>